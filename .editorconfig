root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 8

[Makefile]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.go]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
